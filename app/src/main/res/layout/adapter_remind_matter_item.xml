<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/size_15">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/iv_remind"
        android:layout_width="@dimen/size_26"
        android:layout_height="0dp"
        android:background="@drawable/task_status_home"
        android:button="@null"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_remind_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_3"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_mediu"
        app:layout_constraintLeft_toRightOf="@+id/iv_remind"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/adapter_remind_matter_text" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_remind_calendar_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_3"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_mediu"
        app:layout_constraintLeft_toLeftOf="@+id/tv_remind_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_remind_text"
        tools:text="@string/adapter_remind_matter_time_text" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_remind_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="@dimen/size_3"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_mediu"
        app:layout_constraintLeft_toRightOf="@+id/tv_remind_calendar_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_remind_text"
        tools:text="@string/adapter_remind_matter_time_text" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_remind_remark_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_3"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_mediu"
        app:layout_constraintLeft_toLeftOf="@+id/tv_remind_text"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_remind_time"
        tools:text="@string/adapter_remind_matter_time_text" />

</android.support.constraint.ConstraintLayout>
